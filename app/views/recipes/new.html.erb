<%= form_for @recipe do |f| %>
 
<%= f.label :title, 'Recipe Title' %>
<%= f.text_field :title %> <br>

    <%= f.fields_for :ingredients do |ing| %>

        <%= ing.label :name, 'Name' %>
        <%= ing.text_field :name %> <br>

        <%= ing.label :quantity, 'Quantity' %>
        <%= ing.number_field :quantity %>

    <% end %>

<%= f.submit %>

<% end %>